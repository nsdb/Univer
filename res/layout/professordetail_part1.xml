<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cm_background_pattern_rp"
    android:orientation="vertical" >

            <LinearLayout
                style="@style/WhiteBoxLinearTop"
                android:orientation="horizontal" >

			    <ImageView
			        android:id="@+id/image" style="@style/ProfessorThumbnailButton"
			        android:layout_marginRight="15dp" />

			    <LinearLayout
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
			        android:layout_weight="1"
			        android:orientation="vertical" >

			        <TextView
			            android:id="@+id/title"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="Title"
			            android:textSize="24dp" />

			        <LinearLayout
			            android:layout_width="match_parent"
			            android:layout_height="0dp"
			            android:layout_weight="1"
			            android:gravity="center_vertical"
			            >

			            <TextView
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:textSize="16dp" 
			                android:text="평가한 사람 : " />

			            <TextView
			                android:id="@+id/count"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:textSize="16dp" 
			                android:text="N" />

			            <TextView
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:textSize="16dp" 
			                android:text=" 명" />

			        </LinearLayout>
			        
					<LinearLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content" >
		
		                <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginRight="5dp"
		                    android:text="추천"
		                    android:textSize="16dp" />
		
		                <TextView
		                    android:id="@+id/like"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginRight="5dp"
		                    android:text="0"
		                    android:textSize="16dp" />
		
		                <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginRight="5dp"
		                    android:text="비추천"
		                    android:textSize="16dp" />
		
		                <TextView
		                    android:id="@+id/dislike"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginRight="5dp"
		                    android:text="0"
		                    android:textSize="16dp" />
		
		                <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginRight="5dp"
		                    android:text="댓글"
		                    android:textSize="16dp" />
		
		                <TextView
		                    android:id="@+id/comment_count"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="0"
		                    android:textSize="16dp" />
		            </LinearLayout>			        
			        

			    </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/GrayBoxLinearMiddle">

			    <com.nsdb.univer.ui.customview.ProfessorRatingGraph
			        android:id="@+id/graph"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			         />
                
                
            </LinearLayout>
            
            <LinearLayout
                style="@style/GrayBoxLinearMiddle"
                android:padding="5dp">

                <TextView
                    style="@style/WhiteBoxTextTitle"
                    android:text="강의  질" />

                <RatingBar
                    android:id="@+id/quality"
                    style="@style/CustomRatingBar"
                    android:isIndicator="false"
                    android:rating="0.0" />

            </LinearLayout>

            <LinearLayout
                style="@style/GrayBoxLinearMiddle"
                android:padding="5dp">

                <TextView
                    style="@style/WhiteBoxTextTitle"
                    android:text="인     성" />

                <RatingBar
                    android:id="@+id/report"
                    style="@style/CustomRatingBar"
                    android:isIndicator="false"
                    android:rating="0.0" />

            </LinearLayout>

            <LinearLayout
                style="@style/GrayBoxLinearMiddle"
                android:padding="5dp">

                <TextView
                    style="@style/WhiteBoxTextTitle"
                    android:text="학     점" />

                <RatingBar
                    android:id="@+id/personality"
                    style="@style/CustomRatingBar"
                    android:isIndicator="false"
                    android:rating="0.0" />

            </LinearLayout>

            <LinearLayout
                style="@style/GrayBoxLinearMiddle"
                android:padding="5dp">

                <TextView
                    style="@style/WhiteBoxTextTitle"
                    android:text="출     석" />

                <RatingBar
                    android:id="@+id/attendance"
                    style="@style/CustomRatingBar"
                    android:isIndicator="false"
                    android:rating="0.0" />

            </LinearLayout>

            <LinearLayout
                style="@style/GrayBoxLinearMiddle"
                android:padding="5dp">

                <TextView
                    style="@style/WhiteBoxTextTitle"
                    android:text="과     제" />

                <RatingBar
                    android:id="@+id/grade"
                    style="@style/CustomRatingBar"
                    android:isIndicator="false"
                    android:rating="0.0" />

            </LinearLayout>

            <LinearLayout
                style="@style/WhiteBoxLinearBottom" />
    
</LinearLayout>