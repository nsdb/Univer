<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cm_background_pattern_rp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actionbar" style="@style/ActionBarLinear">

	    <ImageButton
	        style="@style/ActionBarOkButton"
	        android:visibility="invisible" />
        
  	    <TextView
	        android:id="@+id/actionbartitle" style="@style/ActionBarTitle"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="회원가입" />

	    <ImageButton
	        android:id="@+id/apply" style="@style/ActionBarOkButton" />
  	    	    	
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/id" style="@style/WhiteBoxEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="ID (Email)">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/nickname" style="@style/WhiteBoxEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="NickName"/>

        <EditText
            android:id="@+id/password" style="@style/WhiteBoxEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:hint="Password"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/region" style="@style/CommonButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="지역" />

            <Button
                android:id="@+id/univ" style="@style/CommonButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="대학교" />

            <Button
                android:id="@+id/college" style="@style/CommonButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="단과대" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>