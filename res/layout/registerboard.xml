<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/actionbar" style="@style/ActionBarLinear">

	    <ImageButton
	        style="@style/ActionBarWriteButton"
	        android:visibility="invisible" />

  	    <TextView
	        android:id="@+id/actionbartitle" style="@style/ActionBarTitle"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="글쓰기" />
	
	    <ImageButton
	        android:id="@+id/apply" style="@style/ActionBarWriteButton" />
        
    </LinearLayout>    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <Button
	        android:id="@+id/region" style="@style/RangeButton"
	        android:text="지역" />
	    <Button
	        android:id="@+id/univ" style="@style/RangeButton"
	        android:text="대학교" />
	    		    		    
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp" >
	    
        <ImageView
            android:id="@+id/image" style="@style/BoardThumbnailButton"
            android:layout_marginRight="10dp" />

        <EditText
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textMultiLine"
            android:gravity="top">

            <requestFocus />
        </EditText>
        
    </LinearLayout>
    
</LinearLayout>