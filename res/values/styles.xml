    <style name="MyTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="ActionBarLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
